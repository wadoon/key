<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="de.uka.ilkd.key.nui.view.SequentViewController">
	<center>
		<AnchorPane>
			<children>
				<ScrollPane fx:id="scrollPane" layoutY="40.0" prefHeight="245.0"
					prefWidth="500.0" AnchorPane.bottomAnchor="0.0"
					AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
					AnchorPane.topAnchor="0.0">
					<WebView fx:id="textArea" maxHeight="Infinity" prefHeight="8000"
						prefWidth="4000" />
				</ScrollPane>
			</children>
		</AnchorPane>
	</center>
	<top>
		<TitledPane fx:id="sequentOptions" text="Sequent Encoding and Search"
			BorderPane.alignment="CENTER">
			<content>
				<HBox>
					<children>
						<VBox>
							<children>
								<CheckBox fx:id="checkBoxPrettySyntax" mnemonicParsing="false"
									onAction="#usePrettySyntax" selected="true" text="Use Pretty Syntax" />
								<CheckBox fx:id="checkBoxUnicode" mnemonicParsing="false"
									onAction="#useUnicode" text="Enable Unicode" />
							</children>
						</VBox>
						<Separator orientation="VERTICAL">
							<padding>
								<Insets left="5.0" right="5.0" />
							</padding>
						</Separator>
						<VBox maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
							<children>
								<TextField fx:id="searchBox" promptText="Search..." />
								<CheckBox fx:id="checkBoxRegexSearch" mnemonicParsing="false"
									onAction="#useRegex" text="Enable Regex Search" />
							</children>
						</VBox>
					</children>
				</HBox>
			</content>
		</TitledPane>
	</top>
	<bottom>
		<TitledPane fx:id="tacletInfo" text="Taclet Info"
			BorderPane.alignment="CENTER">
			<fx:include fx:id="tacletInfoView" source="TacletInfoView.fxml" />
		</TitledPane>
	</bottom>
</BorderPane>
