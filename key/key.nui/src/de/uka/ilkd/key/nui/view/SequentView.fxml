<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uka.ilkd.key.nui.view.SequentViewController">
   <center>
      <AnchorPane>
         <children>
            <WebView fx:id="textAreaWebView" layoutY="45.0" prefHeight="255.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="45.0" />
            <ButtonBar layoutX="88.0" prefHeight="40.0" prefWidth="412.0" AnchorPane.leftAnchor="88.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <ToolBar prefHeight="40.0" prefWidth="500.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <items>
                  <Button mnemonicParsing="false" onAction="#loadDefaultProof" text="Load Default Proof" />
                <Button mnemonicParsing="false" onAction="#showRootSequent" text="Show Root Sequent" />
                  <ToggleButton fx:id="filterButton" mnemonicParsing="false" onAction="#toggleFilter" text="Search/Filter" />
                  <Separator orientation="VERTICAL">
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </Separator>
                  <VBox>
                     <children>
                        <CheckBox fx:id="checkBoxPrettySyntax" mnemonicParsing="false" onAction="#usePrettySyntax" text="Use Pretty Syntax" />
                        <CheckBox fx:id="checkBoxUnicode" mnemonicParsing="false" onAction="#useUnicode" text="Enable Unicode" />
                     </children>
                  </VBox>
               </items>
            </ToolBar>
         </children>
      </AnchorPane>
   </center>
   <top>
      <AnchorPane fx:id="filterParent" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
         	<TextField fx:id="searchBox" AnchorPane.rightAnchor="13.0" AnchorPane.topAnchor="13.0" />
            <Button alignment="CENTER" layoutX="282.0" layoutY="13.0" mnemonicParsing="false" onAction="#handleApplyFilter" text="Apply" AnchorPane.topAnchor="13.0" />
            <TextField fx:id="filterText" layoutX="13.0" layoutY="13.0" prefHeight="25.0" prefWidth="259.0" AnchorPane.leftAnchor="13.0" AnchorPane.topAnchor="13.0" />
         </children></AnchorPane>
   </top>
</BorderPane>
