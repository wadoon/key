<?xml version="1.0" encoding="UTF-8"?>
	<project name="key.nui" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key/key.nui/lib">
				<filename name="jsr305-3.0.1.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key/key.core/lib">
				<filename name="recoderKey.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key/key.nui/lib">
				<filename name="jcip-annotations-1.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key/key.nui/lib">
				<filename name="reflections-0.9.10.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key/key.core/lib">
				<filename name="antlr.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key/key.nui/lib">
				<filename name="javassist-3.20.0-GA.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/dscheurer/key-workspace/Tools/eclipse_4_4_2/plugins">
				<filename name="org.hamcrest.core_1.3.0.v201303031735.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key/key.nui/lib">
				<filename name="guava-19.0-rc2.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key/key.nui/lib">
				<filename name="annotations-3.0.1u2.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/dscheurer/key-workspace/Tools/eclipse_4_4_2/plugins/org.junit_4.11.0.v201303080030">
				<filename name="junit.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key/key.nui">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
		<copy todir="projectRefs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key">
				<include name="key.core/src/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key">
				<include name="key.core.testgen/src/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key">
				<include name="key.ui/src/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key">
				<include name="key.core.symbolic_execution/src/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key">
				<include name="key.core/genSrc/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="/home/dscheurer/key-workspace/GIT/key/key">
				<include name="key.util/src/**" />
			</fileset>
		</copy>
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="antlr.jar"/>
				<include name="org.hamcrest.core_1.3.0.v201303031735.jar"/>
				<include name="jsr305-3.0.1.jar"/>
				<include name="jcip-annotations-1.0.jar"/>
				<include name="guava-19.0-rc2.jar"/>
				<include name="junit.jar"/>
				<include name="annotations-3.0.1u2.jar"/>
				<include name="recoderKey.jar"/>
				<include name="reflections-0.9.10.jar"/>
				<include name="javassist-3.20.0-GA.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
		<copy todir="build/src">
			<fileset dir="projectRefs/key.core/src">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/key.core.testgen/src">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/key.core/genSrc">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/key.core.symbolic_execution/src">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/key.util/src">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/key.ui/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
		<copy todir="build/classes">
			<fileset dir="projectRefs/key.core/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/key.core.testgen/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/key.core/genSrc">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/key.core.symbolic_execution/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/key.util/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/key.ui/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="key.nui.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name=""
			mainClass=""
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/key.nui.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value=""/>
				<attribute name="Implementation-Title" value=""/>
				<attribute name="Implementation-Version" value=""/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
	
	
	</target>
</project>
