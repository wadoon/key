\axioms {
	len_reverse {
		    \schemaVar \term NatList l;
		    \find( len(reverse(l)) )
		    \replacewith( len(l) )
	};

	get_reverse {
		    \schemaVar \term NatList l;
		    \schemaVar \term int i;
       		    
		    \find( get(reverse(l), i) )
		    \replacewith( get(l, len(l) - i - 1) )
		    \add( len(l) > 0 & 0 <= i & i < len(l) ==> )
	};
	append_append {
		      \schemaVar \term NatList l1,l2,l3;
		      \find( append(append(l1,l2), l3) )
		      \replacewith( append(l1, append(l2,l3)) )
	};

	len_remove {
		   \schemaVar \term NatList l;
		   \schemaVar \term int i;
		\find( len(remove(l, i)) )
		\replacewith( len(l) - 1) \add( len(l) >= 1 & 0 <= i & i < len(l) ==> )
	};

	get_remove {
		\schemaVar \term NatList l;
		\schemaVar \term int r, i;
		
		\find( get(remove(l, r), i) )
		\replacewith( \if (i < r) \then (get(l, i)) \else (get(l, i + 1)) ) \add( len(l) >= 2 & 0 <= r & r < len(l) & i <= 0 & i < len(l) - 1 ==> )
	};
}
