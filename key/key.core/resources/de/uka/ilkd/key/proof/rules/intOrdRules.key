// This file contains only the RULES for the injection
//   onat
// of natural numbers into Ord.
// The rules come in sections
//  * Definitional Extensions 
//  * Derived  Taclets
/

//--------------------------------------------------------------------------
//  
//  Definitional Extensions 
//  
//--------------------------------------------------------------------------

onatZeroDef{
  \find(onat(0))
  \replacewith(o_0)
 \heuristics(concrete)
};

onatSuccDef{
 \schemaVar \term int n;
 \assumes(0<=n)
  \find((onat(n+1)))
 \inSequentState
 \replacewith(oSucc(onat(n)))
};

//--------------------------------------------------------------------------
//  
//  Derived  taclets
//  
//--------------------------------------------------------------------------

onatSucc{
 \schemaVar \term int n;
 \assumes(0<=n)
  \find(oSucc(onat(n)))
  \inSequentState
  \replacewith((onat(n+1)))
 \heuristics(concrete)
};

onatOne{
  \find(onat(1))
  \replacewith(o_1)
 \heuristics(concrete)
};