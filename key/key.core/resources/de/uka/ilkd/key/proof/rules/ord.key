// This file contains only the DECLARATIONS.
// DEFINITIONS for the theory of the ordinals datatype are contained in
// takRules.key.


\sorts {
    Ord;
    int;
}

\predicates {
     olt(Ord,Ord);            // less than relation between ordinals
     oleq(Ord,Ord);           // less than or equal relation between ordinals
     lim(Ord);                // limit ordinals
     nat(Ord);                // natural numbers as ordinals
     oltp(Ord,Ord,Ord,Ord);   // less than relation between pairs of ordinals
     limp(Ord,Ord);           // limit element in the ordering oltp
     succp(Ord,Ord,Ord,Ord);   // second pair is immediate successor of first pair 
}

\functions {
   Ord o_0;
   Ord o_1;
   Ord omega;
   Ord oadd(Ord,Ord);
   Ord otimes(Ord,Ord);
   Ord oexp(Ord,Ord);
   Ord omax(Ord,Ord);
   Ord onat(int);      // injects natural number as finite ordinals
                       // undefined (via underspecification)  for negative integers

   Ord  osup{false,true}(Ord, Ord); 
   Ord encode(Ord,Ord); //encoding of pairs of ordinals
                        //taken from Takeuti's paper
   Ord decode1(Ord);    //decoding of pairs of ordinals
                        // first argument
   Ord decode2(Ord);    //decoding of pairs of ordinals
                        // second argument
   Ord  oGS(int,int); // used as decreasing function in the proof of
                      // termination of Goodstein sequences
   int oHNf(int,int); //encoding of hereditary expansion
 
   Ord  omu{false,true}(Ord, Ord); 
   Ord jenc(Ord,Ord,Ord);  //tripel encoding used in model Delta construction
}
