
// This file contains rules for the Hilbertian choice operator (aka. epsilon),
// which is denoted by \choose in KeY/JavaDL and JML.

\sorts {
    \generic alpha;
}

\schemaVariables {
    \formula phi;
    \skolemTerm alpha sk;
    \variables alpha alphaVar;
}

\rules {

    /*! This rule can be used in situations where a witness for the choose term exists. */
    chooseWitness {
        \find( (\choose alphaVar; phi)) \sameUpdateLevel
        \varcond ( \newDependingOn(sk, phi))
        "Witness exists":\add(==> \exists alphaVar; phi);
        "Use witness":\replacewith(sk) \add({\subst alphaVar; sk}phi==>)
    };
}

