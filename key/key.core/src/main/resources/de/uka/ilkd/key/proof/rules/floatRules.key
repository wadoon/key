\schemaVariables {
  \term double d1, d2;
  \term float f1, f2;
}


\rules(programRules:Java){

  precOfFloat {
      \find(prec(f1,f2))
      \replacewith(javaLeqFloat(FP(0(#), 0(#)), f1) & javaLtFloat(f1,f2))
      \heuristics(simplify)
  };

  precOfDouble {
      \find(prec(d1,d2))
      \replacewith(javaLeqDouble(DFP(0(#), 0(#)), d1) & javaLtDouble(d1,d2))
      \heuristics(simplify)
  };

 ltTodouble {
   \find (lt(d1,d2))
   \replacewith( javaLtDouble(d1,d2) )
   \heuristics(javaFloatSemantics)
 };

 leqTodouble {
   \find (leq(d1,d2))
   \replacewith( javaLeqDouble(d1,d2) )
   \heuristics(javaFloatSemantics)
 };

 gtTodouble {
   \find (gt(d1,d2))
   \replacewith( javaGtDouble(d1,d2) )
   \heuristics(javaFloatSemantics)
 };

 geqTodouble {
   \find (geq(d1,d2))
   \replacewith( javaGeqDouble(d1,d2) )
   \heuristics(javaFloatSemantics)
 };


 ltTofloat {
   \find (lt(f1,f2))
   \replacewith( javaLtFloat(f1,f2) )
   \heuristics(javaFloatSemantics)
 };

 leqTofloat {
   \find (leq(f1,f2))
   \replacewith( javaLeqFloat(f1,f2) )
   \heuristics(javaFloatSemantics)
 };

 gtTofloat {
   \find (gt(f1,f2))
   \replacewith( javaGtFloat(f1,f2) )
   \heuristics(javaFloatSemantics)
 };

 geqTofloat {
   \find (geq(f1,f2))
   \replacewith( javaGeqFloat(f1,f2) )
   \heuristics(javaFloatSemantics)
 };

}

///// Cast rules


\rules {

   castFloatZero {
      \find((float)0)
      \replacewith(0.0f)
      \heuristics(concrete)
   };

   castFloatOne {
      \find((float)1)
      \replacewith(1.0f)
      \heuristics(concrete)
   };

   castAddFloat {
      \schemaVar \term int i;
      \schemaVar \term int j;
      \find((float)(i+j))

      "Use": \replacewith((float)i + (float)j);
      "Show": \add(==> i >= -16777216 & i <= 16777216 &
                       j >= -16777216 & j <= 16777216)
   };

   castSubFloat {
      \schemaVar \term int i;
      \schemaVar \term int j;
      \find((float)(i-j))

      "Use": \replacewith((float)i - (float)j);
      "Show": \add(==> i >= -16777216 & i <= 16777216 &
                       j >= -16777216 & j <= 16777216)
   };

   castMulFloat {
      \schemaVar \term int i;
      \schemaVar \term int j;
      \find((float)(i*j))

      "Use": \replacewith((float)i * (float)j);
      "Show": \add(==> i >= -16777216 & i <= 16777216 &
                       j >= -16777216 & j <= 16777216 &
                       i*j >= -2147483648 & i+j < 2147483648)

   };

}
