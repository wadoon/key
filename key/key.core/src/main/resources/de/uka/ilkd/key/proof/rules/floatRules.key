\schemaVariables {
  \term double d1, d2;
  \term float f1, f2;
}


\rules {

  precOfFloat {
    \find(prec(f1,f2))
    \replacewith(leqFloat(0.0f, f1) & ltFloat(f1,f2))
    \heuristics(simplify)
  };

  precOfDouble {
    \find(prec(d1,d2))
    \replacewith(leqDouble(0.0d, d1) & ltDouble(d1,d2))
    \heuristics(simplify)
  };

}
