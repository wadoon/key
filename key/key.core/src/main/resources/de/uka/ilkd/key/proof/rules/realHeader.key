\sorts{
  real;
}

\functions {

  real R (numbers, numbers);

  // arithmetic operators on mathematical reals
  real rneg(real);
  real radd(real,real);
  real rneg(real);
  real rsub(real,real);  
  real rmul(real, real);
  real rdiv(real, real);
  real rabs(real);

  // comprehensions
  real rbsum{false,false,true}(int, int, real);
  real rmin{true,true}(boolean,real);
  real rmax{true,true}(boolean,real);

}

\predicates {
  rle(real, real);
  rlt(real, real);
  rge(real, real);
  rgt(real, real);
}
