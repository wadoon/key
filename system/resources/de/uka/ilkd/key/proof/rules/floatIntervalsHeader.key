\sorts
{
  fpInterval;
  floatInterval \extends fpInterval;
  doubleInterval \extends fpInterval;
}

\functions
{
  
  //A point interval of a float
  floatInterval FTI(float);
  doubleInterval DTI(double);

  //Functions for getting the upper/lower end of intervals
  float ivMin(floatInterval);
  float ivMax(floatInterval);
  
  float ivMinD(doubleInterval);
  float ivMaxD(doubleInterval);
}

\predicates
{

  //The same as float predicates,
  //only difference is these can't be transformed to use intervals
  //(since they are already transformed once)
  interLt(float, float);
  interGt(float, float);
  interLeq(float, float);
  interGeq(float, float);

  interLtD(double, double);
  interGtD(double, double);
  interLeqD(double, double);
  interGeqD(double, double);
}
