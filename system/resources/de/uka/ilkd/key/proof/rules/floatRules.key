\schemaVariables {
  \term double d1, d2;
  \term float f1, f2;
}


\rules(programRules:Java){

  precOfFloat {
      \find(prec(f1,f2))
      \replacewith(javaLeqFloat(FP(0(#), 0(#)), f1) & javaLtFloat(f1,f2))
      \heuristics(simplify)
  };

  precOfDouble {
      \find(prec(d1,d2))
      \replacewith(javaLeqDouble(DFP(0(#), 0(#)), d1) & javaLtDouble(d1,d2))
      \heuristics(simplify)
  };

 ltTodouble {
   \find (lt(d1,d2))
   \replacewith( javaLtDouble(d1,d2) )
   \heuristics(javaFloatSemantics)
 };

 leqTodouble {
   \find (leq(d1,d2))
   \replacewith( javaLeqDouble(d1,d2) )
   \heuristics(javaFloatSemantics)
 };

 gtTodouble {
   \find (gt(d1,d2))
   \replacewith( javaGtDouble(d1,d2) )
   \heuristics(javaFloatSemantics)
 };

 geqTodouble {
   \find (geq(d1,d2))
   \replacewith( javaGeqDouble(d1,d2) )
   \heuristics(javaFloatSemantics)
 };


 ltTofloat {
   \find (lt(f1,f2))
   \replacewith( javaLtFloat(f1,f2) )
   \heuristics(javaFloatSemantics)
 };

 leqTofloat {
   \find (leq(f1,f2))
   \replacewith( javaLeqFloat(f1,f2) )
   \heuristics(javaFloatSemantics)
 };

 gtTofloat {
   \find (gt(f1,f2))
   \replacewith( javaGtFloat(f1,f2) )
   \heuristics(javaFloatSemantics)
 };

 geqTofloat {
   \find (geq(f1,f2))
   \replacewith( javaGeqFloat(f1,f2) )
   \heuristics(javaFloatSemantics)
 };
}
