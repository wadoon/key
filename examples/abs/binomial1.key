\absSource ".";

\programVariables {
	ABS.StdLib.Int myInt;
}

\rules {

  assign {
      \schemaVar \program Variable lhs;
      \schemaVar \program PureExp exp1;

      \schemaVar \program[list] Statement s;
      \schemaVar \formula post;
      
      \find (\[{ lhs = exp1; s; }\]post) 
      \replacewith ({lhs:=exp1}\[{ s; }\]post)

      \heuristics(simplify_prog)
  };

  emptyBox {
      \schemaVar \formula post;
      
      \find (\[{ }\]post) 
      \replacewith (post)
      \heuristics(simplify_prog)
  };


  boxTrue {      
      \schemaVar \program[list] Statement s;

      \find (\[{ s; }\]true) 
      \replacewith (true)
      \heuristics(concrete)
  };


}



\problem {
   myInt > 0 ->	\[{ myInt = myInt * myInt; myInt = myInt + myInt;  }\] myInt > 0	
}
